init() {

	FI_CONF="/etc/f123e-installer.conf"
	FI_DIR="/usr/share/f123e-installer"
	FI_LIB="/usr/lib/f123e-installer"

	trap '' 2
	
	for FILE in $(ls "${FI_LIB}") 
do
		source "${FI_LIB}/${FILE}"
	done

	source "${FI_CONF}"
	language
	source "$lang_file"
	export reload=true

}

main() {

	update_mirrors
	exit 0
	check_connection
	set_keys
	set_locale
	set_zone
	prepare_drives
	prepare_base
	graphics
	add_software
	install_base
	configure_system
	set_hostname
	add_user
	reboot_system

}

dialog() {

	if "$screen_h" ; then
		/usr/bin/whiptail --backtitle "$backtitle" --title "$op_title" "$@"
	else
		/usr/bin/whiptail --title "$title" "$@"
	fi

}


opt="$1"
init
main

